    "@types/jest": "^29.5.5",
    "@types/node": "^24.0.6",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@uiw/react-codemirror": "^4.23.13",
    "electron": "^37.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "json5": "^2.2.3",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "playwright": "^1.41.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
