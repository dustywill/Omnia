{
  "name": "omnia",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:e2e": "playwright test",
    "clean": "node -e \"import('fs').then(fs=>fs.rmSync('dist',{recursive:true,force:true}))\"",
